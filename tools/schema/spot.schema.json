{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Family Spots Map â€“ Spot",
  "type": "object",
  "required": ["id", "name", "category", "location"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "category": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "location": {
      "type": "object",
      "required": ["lat", "lng"],
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lng": { "type": "number", "minimum": -180, "maximum": 180 }
      }
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "usps": {
      "type": "array",
      "items": { "type": "string" }
    },
    "verified": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}